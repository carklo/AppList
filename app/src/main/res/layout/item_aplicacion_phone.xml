<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/listview_selector">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_ImageView"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:contentDescription="app image"
            android:adjustViewBounds="true"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/app_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/app_ImageView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/app_ImageView"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="Titulo" />

        <TextView
            android:id="@+id/app_textview_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignLeft="@+id/app_textview_title"
            android:layout_below="@+id/app_textview_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Categoria"
            android:id="@+id/app_textView_categoria"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</LinearLayout>